<fieldset class='item-form'>
  <div class="row-fluid">
    <div class="span2">
      <label for="item_group_item_brand">Brand</label>
      <input class="input-small" id="item_group_item_brand" name="item_group[item][brand]" type="text">
    </div>
    <div class="span2">
      <label for="item_group_item_product">Product</label>
      <input class="input-small" id="item_group_item_product" name="item_group[item][product]" type="text">
    </div>
    <div class="span2">
      <label for="item_group_item_reference">Reference</label>
      <input class="input-small" id="item_group_item_reference" name="item_group[item][reference]" type="text">
    </div>
    <div class="span2">
      <label for="item_group_item_buy">Buy</label>
      <input class="input-small" id="item_group_item_buy_price" name="item_group[item][buy_price]" type="text">
