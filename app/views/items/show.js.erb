$(document).ready(function() {
  $('.wrapper').append("<%= escape_javascript("#{render :partial => 'content', locals: {item: @item}}").html_safe %>");
  $('#showModal').modal('show');
  $('.datepicker').datepicker({
    format: 'dd-mm-yyyy'
  });
  $('#showModal').on('hidden', function () {
    $(this).remove();
  });
});